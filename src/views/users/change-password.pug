      if(!wcs_add) var wcs_add = {};
      wcs_add["wa"] = "eecd36f07163e0";
      if(window.wcs) {
        wcs_do();
      }
  body
    if messages.error
      +message("error",messages.error)
    if messages.info
      +message("info", messages.info)
    if messages.success
      +message("success", messages.success)
    .changePassWrap 
      .changePassContainer
        .logo 
          a(href="/") 
            img(src="/img/loginsecretary_beta_logo.png", alt="")
        .text 
          img(src="/img/change_pw/cha_pw.png", alt="text")
        form.changeForm(method="post") 
          .changeFormGrid 
            .text1
              img(src="/img/change_pw/cha_pw_bfpw.png", alt="기존비번")
            .text2
              img(src="/img/change_pw/cha_pw_afpw.png", alt="새비번")
            .text3 
              img(src="/img/change_pw/cha_pw_cf.png", alt="비번확인")
            .input1
              input(type="password",name="oldPassword")
            .input2
              input(type="password",name="newPassword")
            .input3 
              input(type="password",name="newPasswordConfirmation")
            .submit
              a(onclick="changeFormSubmit()") 
                img(src="/img/change_pw/cha_pw_change.png", alt="변경")
    script.
      function changeFormSubmit(){
        const targetForm = document.querySelector(".changeForm")
        targetForm.submit()
      }