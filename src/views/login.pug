include mixins/message
doctype html
html(lang="ko")
  head 
    title #{siteName}
    meta(name="naver-site-verification" content="beb63f6c2c4f0315d96e5bdd6e6741681f21a5ea")
    meta(name="description", content="내가 원하는 사람에게 로그인정보를 손쉽게 공유할 수 있습니다.")
    meta(property="og:type", content="website")
    meta(property="og:title", content="로그인 비서")
    meta(property="og:description", content="내가 원하는 사람에게 로그인정보를 손쉽게 공유할 수 있습니다.")
    meta(property="og:url", content="http://idpw.kr")
    meta(name="Robots", content="INDEX, FOLLOW")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    link(rel="shortcut icon", href="/img/favicon.ico", type="image/x-icon")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")
    link(rel="stylesheet", href="/static/css/styles.css")
    script(type="text/javascript", src="https://oss.sheetjs.com/sheetjs/xlsx.full.min.js")
    script(data-ad-client="ca-pub-2245738259481185", async, src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js")
    script(type="text/javascript" src="//wcs.naver.net/wcslog.js")
    script.
      if(!wcs_add) var wcs_add = {};
      wcs_add["wa"] = "eecd36f07163e0";
      if(window.wcs) {
        wcs_do();
      }
  body
    if messages.error
      +message("error",messages.error)
    if messages.info
      +message("info", messages.info)
    if messages.success
      +message("success", messages.success)
    main 
      div.alignDiv
        div.loginWrap
          div.loginHeader 
            a(href="/") 
              img.logo(src="img/loginsecretary_beta_logo.png", alt="로그인비서")
          form#loginForm(method="post")
            //- div.saveLogin
              .checkbox
                label(for="saveLogin") 
                  input#saveLogin(type="checkbox", name="saveLogin") 
                  img(src="/img/login/login_autobtn.jpg", alt="auto", name="saveLogin")
            div.inputArea
              div.inputId
                img(src="/img/login/login_idbtn.jpg", alt="pw")
                input(type="text", name="userId", onkeypress="press(this.form)", required)
              div.inputPw
                img(src="/img/login/login_pwbtn.jpg", alt="pw")
                input(type="password", name="password", onkeypress="press(this.form)", required)
            div.etcArea
              a.join(href="/joinselect")
                img(src="img/login/login_joinbtn.jpg", alt="회원가입")
              a.fid(href="/findid",value="아이디찾기")
                img(src="/img/login/login_findidbtn.jpg", alt="fid")
              a.fpw(href="/findpw",value="비밀번호찾기")
                img(src="/img/login/login_findpwbtn.png", alt="fpw")
            div.loginBtnArea
              div.login
                a(onclick="submit()") 
                  img.loginBtn(src="/img/login/login_btn.jpg", alt="pw")
          div.loginImg
            img.character(src="img/character.png", alt="로그인비서")
    script.
      const loginForm = document.querySelector("#loginForm")
      function submit(){
        loginForm.submit()
      }
      function press(f){
        if(f.keyCode == 13){
          loginForm.submit()
        }
      }