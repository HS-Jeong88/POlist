header
  div
    a(href="/").header__logo
      img(src="/img/logop.png", alt="로고")
  nav
    ul
      if loggedIn
        li
          a(href="/users/edit") Edit Profile
        li
          a(href="/users/logout")  Log Out
        li
          a(href=`/users/${loggedInUser._id}`)
            if loggedInUser.avatarUrl == undefined
              img.header__avatar(src="/img/profile1.png")
            else 
              img.header__avatar(src="/"+loggedInUser.avatarUrl)
      else
        li
          a(href="/")  Login                        
        li
          a(href="/join").header__btn  Join
